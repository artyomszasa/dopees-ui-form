link(rel='stylesheet' href='text-box.css')
dope-box(
  label='[[label]]'
  hint='[[hint]]'
  dirty='[[dirty]]'
  readonly='[[readonly]]'
  required='[[required]]'
  focused='[[focused]]'
  invalid='[[invalid]]'
  empty='[[empty]]'
  placeholder='[[placeholder]]'
  validation-message='[[validationMessage]]'
  on-click='activate')
    dope-text-field.raw(
      slot='implementation'
      type='[[type]]'
      placeholder='[[placeholder]]'
      readonly='[[readonly]]'
      required='[[required]]'
      pattern='[[pattern]]'
      maxlength='[[maxlength]]'
      minlength='[[minlength]]'
      maxlength-message='[[maxlengthMessage]]'
      minlength-message='[[minlengthMessage]]'
      pattern-message='[[patternMessage]]'
      required-message='[[requiredMessage]]'
      invalid='{{invalid}}'
      focused='{{focused}}'
      empty='{{empty}}'
      validation-message='{{validationMessage}}'
      value='{{value}}')
    dope-material-icon(slot='icon' type='close' on-click='onClearClick')