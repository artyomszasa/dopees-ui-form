link(rel='stylesheet' href='box.css')
.field(focused$='[[focused]]' empty$='[[empty]]' readonly$='[[readonly]]' required$='[[required]]' invalid$='[[invalid]]' no-label$='[[isEmpty(label)]]')
  .field--box
    label.field--label [[label]]
    .field--inner
      slot.field--body(name='implementation')
      slot.field--icon(name='icon')
  .field--under
    template(is='dom-if' if='[[__showHint(validationMessage, hint)]]')
      span.field--hint [[hint]]
    template(is='dom-if' if='[[validationMessage]]')
      span.field--error [[validationMessage]]
